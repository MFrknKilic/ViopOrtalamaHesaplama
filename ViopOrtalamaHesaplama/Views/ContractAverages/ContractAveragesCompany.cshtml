@using ViopOrtalamaHesaplama.UI.Models.Contracts
@model List<CompanyAvarages>
@{
    Layout = "~/Views/Shared/YourLayout.cshtml";
    ViewData["Title"] = "Company Averages";
}

<!DOCTYPE html>
<html>
<head>
    <title>Company Averages</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        .average-cell {
            text-align: right;
        }
    </style>
</head>
<body>
    <h1>Company Averages</h1>
    <table>
        <thead>
            <tr>
                <th>Şirket</th>
                <th>Vade</th>
                <th>Pozisyon</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Ortalama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contractAverage in Model)
            {
                <tr>
                    <td>@contractAverage.Company</td>
                    <td>@contractAverage.Expiry</td>
                    <td>@contractAverage.Position</td>
                    <td>@contractAverage.Quantity</td>
                    <td>@contractAverage.Price.ToString("N2")</td>
                    <td class="average-cell">@contractAverage.ContactAverage.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
    <h2>Open Positions</h2>
    <table id="open-table">
        <thead>
            <tr>
                <th>Şirket</th>
                <th>Vade</th>
                <th>Pozisyon</th>
                <th>Adet</th>
                <th>Fiyat</th>
            </tr>
        </thead>
        <tbody id="open-table-body">
           
        </tbody>
    </table>
</body>
</html>

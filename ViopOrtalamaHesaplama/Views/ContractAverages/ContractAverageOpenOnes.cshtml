@using ViopOrtalamaHesaplama.UI.Models.Contracts
@model List<ContractAvarageVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "";
}

<!DOCTYPE html>
<html>
<head>
    <title>Contracts List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Contract List</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Şirket</th>
                    <th>Vade</th>
                    <th>Pozisyon</th>
                    <th>Adet</th>
                    <th>Fiyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contract in Model)
                {
                    <tr>
                        
                        <td>@contract.Company</td>
                        <td>@contract.Expiry.Value.GetDisplayName()--@contract.Expiry.GetValue()</td>
                        <td>@contract.SelectedPosition</td>
                        <td>@contract.Quantity</td>
                        <td>@contract.Price.ToString("N2")</td>
                       
                        <td>
                            <button class="btn btn-danger" onclick="deleteRow(@contract.ContractID)">Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
<script>
    function deleteRow(contractID) {
        if (confirm("Bu kontratı silmek istediğinizden emin misiniz?")) {
            // AJAX isteği yaparak DeleteAction action'ına contractID değerini gönderin
            $.ajax({
                url: '@Url.Action("DeleteContract", "Contract")',
                type: 'POST',
                data: { contractID: contractID },
                success: function (result) {
                    location.reload();
                },
                error: function (error) {
                    // Hata durumunda yapılacak işlemler
                }
            });
        }
    }
</script>